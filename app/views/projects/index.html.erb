<div class="d-flex flex-column gap-4">
  <h1 class="text-primary">Projetos</h1>
  <div class="row row-cols-1 row-cols-sm-3 g-4 align-items-stretch">
    <% @projects.each do |project| %>
      <div class="col">
        <div class="card d-flex align-items-center p-2">
          <%= 
          image_tag(project['image_url'], size:"250x200", class: "rounded") 
        %>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to project['name'], show_project_path(project['id']),  class: "link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
