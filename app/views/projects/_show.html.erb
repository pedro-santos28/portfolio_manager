<div class="container-lg fs-4">
  <div class="row gap-2">
    <div class="col-md-4 d-flex flex-column justify-content-start align-items-center">
      <label class="form-label h5 text-dark text-center">
        <%= project['name'] %>
      </label>
      <%= 
          image_tag(project['image_url'], size:"400x300", class: "img-fluid rounded") 
        %>
    </div>
    <div class="col-md-4 d-flex flex-column gap-3">
      <div class="d-flex flex-column">
        <label class="form-label h5 text-primary">Repositório</label>
        <%= link_to project['repository_url'], project['repository_url'], target: "_blank" %>
      </div>
      <div class="d-flex flex-column">
        <label class="form-label h5 text-primary">Hospedagem</label>
        <% if project['hosting_url'] %>
          <%= link_to project['hosting_url'], project['hosting_url'], target: "_blank" %>
        <% else %>
          <p class="text-danger">url indiponível</p>
        <% end %>
      </div>
    </div>
    <div class="col-md-12 d-flex flex-column">
      <label class="form-label h5 text-primary">Descrição</label>
      <p>
        <%= project['description'] %>
      </p>
    </div>
  </div>
</div>
