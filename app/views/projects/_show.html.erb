<div class="container p-2 fs-4">
  <div class="row mb-3 gap-3">
    <div class="col-sm-4 d-flex flex-column justify-content-start align-items-center">
      <label class="form-label h5 text-primary text-center">
        <%= @project.name %>
      </label>
      <%= 
          image_tag(@project.image_url, size:"400x300", class: "img-fluid rounded") 
        %>
    </div>
    <div class="col-sm-4 d-flex flex-column align-items-start justify-content-center gap-3">
      <div class="d-flex flex-column">
        <label class="form-label h5 text-primary">Repositório</label>
        <%= link_to  @project.repository_url, @project.repository_url, target: "_blank" %>
      </div>
      <div class="d-flex flex-column">
        <label class="form-label h5 text-primary">Hospedagem</label>
        <%= link_to  @project.hosting_url, @project.hosting_url, target: "_blank"%>
      </div>
    </div>
  </div>
  <div class="row mb-3 d-flex flex-column">
    <label class="form-label h5 text-primary">Descrição</label>
    <p>
      <%= @project.description %>
    </p>
  </div>
</div>
