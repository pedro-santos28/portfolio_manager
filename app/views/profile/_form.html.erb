<%= form_tag update_profile_path(profile['id']), method: :put do%>
  <div class="mb-3">
    <div class="mb-3">
      <%= label_tag :name, "Nome" %>
      <%= text_field_tag 'profile[name]', profile['name'], class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= label_tag :description, "Descrição" %>
      <%= text_area_tag 'profile[description]', profile['description'], class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= label_tag :image, "Imagem" %>
      <%= text_field_tag 'profile[image]', profile['image'], class: "form-control" %>
    </div>
    <ul class="mb-3 list-unstyled">
      <%= label_tag :traits, "Caracteristicas" %>
      <% profile['traits'].each do |trait| %>
        <li>
          <div class="form-group">
            <%= text_field_tag "profile[traits][][id]", trait['id'], class: "form-control d-none" %>
            <%= text_field_tag "profile[traits][][description]", trait['description'], class: "form-control mb-2" %>
          </div>
        </li>
      <% end %>
    </ul>
    <%= link_to "Voltar", profile_path, class: "btn btn-secondary" %>
    <%= submit_tag "Salvar", class: "btn btn-success" %>
  </div>
<%end %>
